# Server
PORT=3000
NODE_ENV=development

# App secrets
JWT_SECRET=replace_with_a_strong_random_value

# Database (Postgres example)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=cmos_dormitory
# Or a full DATABASE_URL:
# DATABASE_URL=postgres://user:password@localhost:5432/cmos_dormitory

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Email (SMTP) - optional, used for notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM="cmos.dormitory <no-reply@example.com>"

# SMS provider (optional)
SMS_PROVIDER_API_KEY=

# Storage (optional) - for uploaded files / product images
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./uploads

# Admin initial credentials (use only for local/dev)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# Optional feature flags
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
